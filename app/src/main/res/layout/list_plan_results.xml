<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90sp"
    android:gravity="center_vertical"
    android:padding="10sp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/RoutePlannerResult_Estimate"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textAlignment="center"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_text_orange"
        android:textColor="@color/defaultWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/RoutePlannerResult_Route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="140sp"
                    android:padding="3sp"
                    android:layout_marginLeft="5sp"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/RoutePlannerResult_Direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:maxWidth="120sp"
                    android:padding="3sp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/defaultWhite"
                    android:background="@drawable/round_text_grey"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:src="@mipmap/distance"/>
            <TextView
                android:id="@+id/RoutePlannerResult_Far"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:src="@drawable/wait64"/>
            <TextView
                android:id="@+id/RoutePlannerResult_Wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:src="@drawable/routetime64"/>
            <TextView
                android:id="@+id/RoutePlannerResult_RouteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>